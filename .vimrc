set number
set tabstop=2
set shiftwidth=2
set expandtab
syntax enable
" colo desert
set nobackup
set smarttab
set lbr
set tw=300
set ai
set si
set wrap

" toggle NERDTree 
nnoremap <C-e> :NERDTreeToggle<CR>
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O

